{
  "name": "wire-trader",
  "version": "1.0.0",
  "description": "A unified cryptocurrency trading portal that enables users to trade across multiple exchanges from a single interface",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/"
  },
  "keywords": [
    "cryptocurrency",
    "trading",
    "exchanges",
    "ccxt",
    "binance",
    "coinbase",
    "kraken",
    "trading-bot",
    "portfolio",
    "multi-exchange"
  ],
  "author": "Wire-Trader Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "ccxt": "^4.4.17",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.5.2",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adsavulescu/wire-trader.git"
  },
  "bugs": {
    "url": "https://github.com/adsavulescu/wire-trader/issues"
